<h1>My tasks</h1>
<br>
<div>
  <ul>
    <% @tasks.each do |task| %>
      <li>
      <%= task.completed %> <%= link_to task.title, task_path(task.id) %>
      <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      </li>
    <% end %>
  </ul>

  <%= link_to "Create Task", new_path %>

</div>
